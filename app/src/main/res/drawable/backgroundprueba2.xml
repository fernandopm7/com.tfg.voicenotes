<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape>

            <solid android:color="#efefef" />
        </shape>
    </item>

    <item>
        <rotate

            android:fromDegrees="-45"
            android:toDegrees="0"
            android:pivotX="150%"
            android:pivotY="20%" >
            <shape

                android:shape="rectangle" >
                <solid android:color="#f9d383" />

            </shape>

        </rotate>
    </item>
</layer-list>